<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FabMovieDetailAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">14dp</item>
        <item name="android:alpha">0</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="backgroundTint">@color/fab_action_color</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="FabMovieDetailMainAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="backgroundTint">@color/fab_main_color</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="RateMovieDialogAnim">
        <item name="android:windowEnterAnimation">@anim/fragment_enter_slide_down</item>
        <item name="android:windowExitAnimation">@anim/fragment_exit_slide_down</item>
    </style>

</resources>