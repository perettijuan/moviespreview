<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewState"
            type="com.jpp.mpperson.PersonViewState" />

        <variable
            name="personData"
            type="com.jpp.mpperson.UIPersonRow" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/personContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <!-- Person header-->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/person_app_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/person_app_bar_height"
            android:background="@android:color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <include layout="@layout/layout_person_header" />
        </com.google.android.material.appbar.AppBarLayout>
        <!-- End Person header-->

        <!-- Person Content-->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

                <com.jpp.mpdesign.views.MPTitleValueRow
                    android:id="@+id/personBirthdayRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="@{viewState.content.birthday.visibility}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:titleText="@{viewState.content.birthday.titleRes}"
                    app:valueText="@{viewState.content.birthday.value}" />

                <com.jpp.mpdesign.views.MPTitleValueRow
                    android:id="@+id/personPlaceOfBirthRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="@{viewState.content.placeOfBirth.visibility}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/personBirthdayRow"
                    app:titleText="@{viewState.content.placeOfBirth.titleRes}"
                    app:valueText="@{viewState.content.placeOfBirth.value}" />

                <com.jpp.mpdesign.views.MPTitleValueRow
                    android:id="@+id/personDeathDayRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="@{viewState.content.deathDay.visibility}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/personPlaceOfBirthRow"
                    app:titleText="@{viewState.content.deathDay.titleRes}"
                    app:valueText="@{viewState.content.deathDay.value}" />

                <TextView
                    android:id="@+id/personBioTitleTextView"
                    style="@style/MPTextViewTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@{viewState.content.bio.titleRes}"
                    android:visibility="@{viewState.content.bio.visibility}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/personDeathDayRow" />

                <TextView
                    android:id="@+id/personBioBodyTextView"
                    style="@style/MPTextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/movie_details_vertical_spacing"
                    android:padding="10dp"
                    android:text="@{viewState.content.bio.value}"
                    android:visibility="@{viewState.content.bio.visibility}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/personBioTitleTextView"
                    tools:text="Lorem ipsum jaklk lkjaskljaskl  lkjalksjlkjas lkjklkajs klas" />

                <ProgressBar
                    android:id="@+id/personLoadingView"
                    style="@style/MPProgressBar"
                    android:visibility="@{viewState.loadingVisibility}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.jpp.mpdesign.views.MPErrorView
                    android:id="@+id/personErrorView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{viewState.errorVisibility}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/personDetailNoInfoTextView"
                    style="@style/MPTextViewTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="@{viewState.content.dataAvailable.titleRes}"
                    android:visibility="@{viewState.content.dataAvailable.visibility}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <!-- End Person Content-->
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>