<resources>

    <!-- Base appModule theme. -->
    <style name="MPTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>

        <item name="android:windowBackground">@color/windowBackground</item>

        <!-- This is important for the transitions executed between activities-->
        <item name="android:windowSharedElementsUseOverlay">false</item>

        <item name="mpActionBarHeightExpanded">@dimen/action_bar_height_expanded</item>
        <item name="mpActionBarHeightNormal">@dimen/action_bar_height_normal</item>


        <item name="mpMovieItemHeaderImageWidth">@dimen/movie_item_header_image_view_width</item>
        <item name="mpMovieItemHeaderImageHeight">@dimen/movie_item_header_image_view_height</item>
        <item name="mpMovieItemImageHeight">@dimen/movie_item_image_height</item>
        <item name="mpMovieItemImageWidth">@dimen/movie_item_image_width</item>
        <item name="mpMovieItemBottomIconSize">@dimen/movie_item_bottom_bar_icon_size</item>
        <item name="mpMovieItemMaxSize">@dimen/movie_item_max_height</item>

        <item name="mpDetailsVerticalSpacing">@dimen/movie_details_vertical_spacing</item>
        <item name="mpDetailsContentPadding">@dimen/movie_details_content_padding</item>
        <item name="mpDetailsActionLoadingSize">@dimen/movie_details_actions_loading_size</item>
        <item name="mpDetailsActionMargin">@dimen/movie_details_actions_margin</item>

        <item name="mpSearchImageSize">@dimen/search_body_icon_size</item>
        <item name="mpSearchItemImageSize">@dimen/search_result_image_size</item>
        <item name="mpSearchItemTitlePadding">@dimen/search_result_title_padding</item>
        <item name="mpSearchItemChevronPadding">@dimen/search_result_chevron_padding</item>
        <item name="mpSearchItemTypeImageSize">@dimen/search_result_type_image_size</item>
        <item name="mpSearchItemGeneralPadding">@dimen/search_result_padding</item>
        <item name="mpCreditItemImageSize">@dimen/credits_item_image_view_height</item>
        <item name="mpCreditItemPadding">@dimen/credits_item_padding</item>
        <item name="mpAboutIconSize">@dimen/about_icon_size</item>
        <item name="mpAboutIconMarginTop">@dimen/about_icon_top_margin</item>
        <item name="mpAboutItemIconSize">@dimen/about_item_icon_size</item>
        <item name="mpAboutItemVerticalSpacing">@dimen/about_item_vertical_spacing</item>
        <item name="mpNavHeaderIconSize">@dimen/nav_header_icon_size</item>
        <item name="mpNavHeaderPadding">@dimen/nav_header_padding</item>
        <item name="mpAccountAvatarSize">@dimen/account_avatar_size</item>
        <item name="mpActionButtonSize">@dimen/action_button_size</item>
        <item name="mpAccountMovieItemWidth">@dimen/account_movie_list_item_width</item>
        <item name="mpAccountMovieItemHeight">@dimen/account_movie_list_item_height</item>
        <item name="mpAccountMovieListHeight">@dimen/account_movie_list_height</item>
        <item name="mpUserMovieItemMaxSize">@dimen/user_item_max_height</item>
        <item name="mpUserMovieItemHeaderImageWidth">@dimen/movie_item_header_image_view_width</item>
        <item name="mpUserMovieItemHeaderImageHeight">@dimen/movie_item_header_image_view_height</item>
        <item name="mpUserMovieItemImageHeight">@dimen/movie_item_image_height</item>
        <item name="mpUserAccountContentPadding">@dimen/user_account_content_padding</item>
        <item name="mpRateMovieImageSize">@dimen/movie_details_rate_image_size</item>
        <item name="mpRateMoviePadding">@dimen/movie_details_rate_padding</item>

    </style>

    <!-- Used in the Drawer items-->
    <style name="MPNavigationViewItemStyle" parent="@android:style/TextAppearance.Medium" />

    <!-- Application TopBar -->
    <style name="MPAppToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>


    <!-- MPLoadingView -->
    <style name="MPProgressBar">
        <item name="android:layout_height">@dimen/mp_loading_view_default_height</item>
        <item name="android:layout_width">@dimen/mp_loading_view_default_width</item>
        <item name="android:indeterminateDrawable">@drawable/pg_mp_progress_bar</item>
    </style>

    <!-- MPLoadingView -->
    <style name="MPProgressBarSmall" parent="MPProgressBar">
        <item name="android:layout_height">@dimen/mp_loading_view_default_size_small</item>
        <item name="android:layout_width">@dimen/mp_loading_view_default_size_small</item>
    </style>

    <!-- MPLoadingErrorView -->
    <style name="MPErrorView">
        <item name="android:layout_height">@dimen/error_image_view_default_height</item>
        <item name="android:layout_width">@dimen/error_image_view_default_height</item>
    </style>

    <!-- TextView styles -->

    <style name="MPTextViewNormal" parent="@android:style/TextAppearance" />

    <style name="MPTextViewTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="MPTextViewSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MPSingleCharacter" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/single_character_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
