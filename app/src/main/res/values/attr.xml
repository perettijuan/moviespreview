<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Custom attributes declared to be able to implement Dynamic Themes
       ref = https://medium.com/mindorks/mastering-android-themes-chapter-3-26a5b7773b6b -->
  <attr name="mpActionBarHeightExpanded" format="reference"/>
  <attr name="mpActionBarHeightNormal" format="reference"/>


  <declare-styleable name="MPLoadingView">
    <attr name="primaryColor" format="color" />
    <attr name="secondaryColor" format="color" />
    <attr name="stroke" format="dimension|reference" />
  </declare-styleable>


</resources>